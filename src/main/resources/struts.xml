<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
        "http://struts.apache.org/dtds/struts-2.5.dtd">

<struts>
    <constant name="struts.devMode" value="true"/>
    <package name="alunos-hibernate-envers" extends="struts-default">
        <action name="index">
            <result>/pages/index.jsp</result>
        </action>
        <action name="formAluno">
            <result>/pages/formAluno.jsp</result>
        </action>
        <action name="salvar" 
                class="br.com.helison.controllers.AlunoController" 
                method="salvar">
            <result name="success">/pages/index.jsp</result>
            <result name="error">/pages/formAluno.jsp</result>
        </action>
    </package>
</struts>
